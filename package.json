{
  "name": "honobackend",
  "version": "1.0.0",
  "description": "Hono/TypeScript backend API with PostgreSQL and Drizzle ORM",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "dev": "bun --hot index.ts",
    "db:generate": "drizzle-kit generate",
    "db:pull": "drizzle-kit pull",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "start": "bun run index.ts",
    "build": "tsc --noEmit && bun build index.ts --minify --outdir dist --target bun",
    "build:compile": "tsc --noEmit && bun build index.ts --minify --outfile bin/honobackend --compile --target bun",
    "start:prod": "bun run dist/index.js",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "clean": "rm -rf dist bin",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.6",
    "axios": "^1.13.5",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.12.1",
    "hono-rate-limiter": "^0.5.3",
    "sanitize-html": "^2.17.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/bun": "^1.3.9",
    "@types/sanitize-html": "^2.16.0",
    "drizzle-kit": "^0.31.9",
    "postgres": "^3.4.8",
    "typescript": "^5.9.3"
  },
  "keywords": [
    "hono",
    "typescript",
    "backend",
    "api",
    "postgresql",
    "drizzle-orm",
    "bun"
  ],
  "author": "pilput",
  "license": "MIT"
}
