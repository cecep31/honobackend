{
  "name": "honobackend",
  "module": "index.ts",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "dev": "bun --hot index.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:pull": "drizzle-kit pull",
    "db:push": "drizzle-kit push",
    "studio": "drizzle-kit studio",
    "start": "bun run index.ts",
    "build": "tsc --noEmit && bun build index.ts --minify --outdir dist --target bun",
    "build:compile": "tsc --noEmit && bun build index.ts --minify --outfile bin/honobackend --compile --target bun",
    "start:prod": "bun run dist/index.js",
    "test": "bun test",
    "clean": "rm -rf dist bin"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.6",
    "axios": "^1.13.2",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.1",
    "hono-rate-limiter": "^0.5.1",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "drizzle-kit": "^0.31.8",
    "typescript": "^5.9.3"
  }
}
