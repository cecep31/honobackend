{
  "scripts": {
    "typecheck": "tsc --noEmit",
    "dev": "bun run --hot src/index.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "studio": "drizzle-kit studio",
    "start": "bun run src/index.ts",
    "build": "tsc --noEmit && bun build src/index.ts --outdir dist --minify --target bun",
    "build:compile": "bun build src/index.ts --outfile bin/honobackend --minify --compile --target bun",
    "start:prod": "bun run src/index.ts"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.2.2",
    "drizzle-orm": "^0.33.0",
    "hono": "^4.5.5",
    "hono-rate-limiter": "^0.4.0",
    "postgres": "^3.4.4",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@types/bun": "latest",
    "drizzle-kit": "^0.24.0",
    "minio": "^8.0.1",
    "typescript": "^5.5.4"
  }
}
